<Context get={{ current_user: current_user }}>
  <div class="flex flex-col space-y-1">
    <LivePatch to="/browse" class={{"rounded-lg w-full flex items-center p-1.5 text-sm font-regular transition duration-150 ease-in-out group hover:bg-blueGray-200 focus:outline-none focus:text-gray-900 focus:bg-gray-50 text-gray-600", "bg-blueGray-200 text-gray-800": @page == "browse"}}>
      <span class="w-8 h-8 mr-3 items-center flex place-content-center bg-blueGray-200 hover:bg-blueGray-300 rounded-full">
        <svg
          aria-labelledby="navigation_browse"
          class={{"w-5 h-5 transition duration-150 ease-in-out text-gray-600", "text-gray-800": @page == "browse"}}
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
      </span>
      <span class="capitalize text-sm font-semibold" id="navigation_browse">browse</span>
    </LivePatch>

    <LivePatch :if={{@current_user}} to={{"/user/" <> e(@current_user, :character, :username, "anon")}} class={{"rounded-lg w-full flex items-center p-1.5 text-sm font-regular transition duration-150 ease-in-out group hover:bg-blueGray-200 focus:outline-none focus:text-gray-900 focus:bg-gray-50 text-gray-600", "bg-blueGray-200 text-gray-800": @page == "profile"}}>
      <span class="w-8 h-8 mr-3 items-center flex place-content-center bg-blueGray-200 hover:bg-blueGray-300 rounded-full">
      <svg
        aria-labelledby="navigation_profile"
        class={{"w-5 h-5 transition duration-150 ease-in-out text-gray-600", "text-gray-800": @page == "profile"}}
        fill="none" stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
      </span>
      <span class="capitalize text-sm font-semibold" id="navigation_profile">profile</span>
    </LivePatch>
    
    <LivePatch :if={{@current_user}} to={{"/reflow/map"}} class={{"rounded-lg w-full flex items-center p-1.5 text-sm font-regular transition duration-150 ease-in-out group hover:bg-blueGray-200 focus:outline-none focus:text-gray-900 focus:bg-gray-50 text-gray-600", "bg-blueGray-200 text-gray-800": @page == "map"}}>
      <span class="w-8 h-8 mr-3 items-center flex place-content-center bg-blueGray-200 hover:bg-blueGray-300 rounded-full">
      <svg
        aria-labelledby="navigation_profile"
        class={{"w-5 h-5 transition duration-150 ease-in-out text-gray-600", "text-gray-800": @page == "map"}}
        fill="none" stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
        </svg>
      </span>
      <span class="capitalize text-sm font-semibold" id="navigation_profile">Map</span>
    </LivePatch>
  </div>
</Context>
